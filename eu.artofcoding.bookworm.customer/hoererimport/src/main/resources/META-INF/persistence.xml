<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence.xsd"
             version="2.0">
    <persistence-unit name="bookworm.hoerer" transaction-type="RESOURCE_LOCAL">
        <class>eu.artofcoding.bookworm.api.hoerer.Hoererstamm</class>
        <class>eu.artofcoding.bookworm.api.hoerer.HoererBuchstamm</class>
        <class>eu.artofcoding.bookworm.api.hoerer.Belastung</class>
        <class>eu.artofcoding.bookworm.api.hoerer.HoererKennzeichen</class>
        <class>eu.artofcoding.bookworm.api.hoerer.Bestellkarte</class>
        <class>eu.artofcoding.bookworm.api.hoerer.BestellkarteArchiv</class>
        <class>eu.artofcoding.bookworm.api.book.Book</class>
        <class>eu.artofcoding.bookworm.api.book.Sachgebiet</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
