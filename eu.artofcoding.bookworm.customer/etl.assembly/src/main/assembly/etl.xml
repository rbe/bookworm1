<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>dist</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>${assembly.root}</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/site</directory>
            <outputDirectory>${assembly.root}/docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../etl/target/filtered-resources/conf</directory>
            <outputDirectory>${assembly.root}/example/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/bin</directory>
            <outputDirectory>${assembly.root}/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/init.d</directory>
            <outputDirectory>${assembly.root}/init.d</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${assembly.root}/lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <excludes>
                <exclude>eu.artofcoding.bookworm:eu.artofcoding.bookworm.customer.etl</exclude>
                <exclude>eu.artofcoding.bookworm:eu.artofcoding.bookworm.customer.etl.assembly</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${assembly.root}/lib/optional</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>org.jasypt:jasypt</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${assembly.root}/</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <includes>
                <include>eu.artofcoding.bookworm:eu.artofcoding.bookworm.customer.etl</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
