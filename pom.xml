<?xml version='1.0' encoding='UTF-8'?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!--
        POM.
    -->
    <groupId>eu.artofcoding.bookworm</groupId>
    <artifactId>bookworm</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <!--
        Project Information.
    -->
    <name>Bookworm Parent POM</name>
    <url>http://www.art-of-coding.eu/</url>
    <inceptionYear>2012</inceptionYear>
    <developers>
        <developer>
            <name>Ralf Bensmann</name>
            <email>ralf@art-of-coding.eu</email>
        </developer>
    </developers>
    <!--
    <contributors>
        <contributor>
        </contributor>
    </contributors>
    -->
    <organization>
        <name>art of coding</name>
        <url>http://www.art-of-coding.eu/</url>
    </organization>
    <!--
        Build Settings.
    -->
    <packaging>pom</packaging>
    <modules>
        <module>bookworm-api</module>
        <module>bookworm-import</module>
        <module>bookworm-web</module>
    </modules>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.java.version>1.6</project.java.version>
        <version.org.apache.maven.plugins.maven-compiler-plugin>2.3.2</version.org.apache.maven.plugins.maven-compiler-plugin>
        <version.org.apache.maven.plugins.maven-jar-plugin>2.4</version.org.apache.maven.plugins.maven-jar-plugin>
        <version.org.apache.maven.plugins.maven-shade-plugin>1.7.1</version.org.apache.maven.plugins.maven-shade-plugin>
        <version.org.slf4j.slf4j-api>1.6.4</version.org.slf4j.slf4j-api>
        <version.javax.javaee-api>6.0</version.javax.javaee-api>
        <version.javax.enterprise.cdi-api>1.1.EDR1.2</version.javax.enterprise.cdi-api>
        <version.javax.persistence.persistence-api>1.0.2</version.javax.persistence.persistence-api>
        <version.org.apache.camel.camel-core>2.10.0</version.org.apache.camel.camel-core>
        <version.org.springframework.spring-core>3.1.1.RELEASE</version.org.springframework.spring-core>
        <version.mysql.mysql-connector-java>5.1.21</version.mysql.mysql-connector-java>
    </properties>
    <repositories>
        <repository>
            <id>java.net</id>
            <url>http://download.java.net/maven/2</url>
        </repository>
        <repository>
            <id>repository.jboss.org</id>
            <name>JBoss Repository</name>
            <url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>public.maven.repository</id>
            <name>Public Local Repository</name>
            <url>file:../../public.maven.repository/</url>
        </repository>
    </distributionManagement>
</project>
