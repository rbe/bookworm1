<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <!--
        Factories.
    -->
    <!--
    <factory>
        <exception-handler-factory>
            eu.artofcoding.odisee.console.OdiseeConsoleExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    -->
    <!--
        Managed Beans.
    -->
    <!-- Language -->
    <managed-bean>
        <managed-bean-name>language</managed-bean-name>
        <managed-bean-class>eu.artofcoding.beetlejuice.web.LanguageBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <!-- Basket -->
    <managed-bean>
        <managed-bean-name>bookwormBean</managed-bean-name>
        <managed-bean-class>eu.artofcoding.bookworm.BookwormBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>maxSearchResults</property-name>
            <property-class>java.lang.Integer</property-class>
            <value>0</value>
        </managed-property>
        <managed-property>
            <property-name>mailName</property-name>
            <value>WBH Online Shop</value>
        </managed-property>
        <managed-property>
            <property-name>mailUser</property-name>
            <value>wbh@wbh-online.de</value>
        </managed-property>
        <managed-property>
            <property-name>mailSubject</property-name>
            <value>Ihre Bestellung bei der WBH</value>
        </managed-property>
    </managed-bean>
    <!--
        Application.
    -->
    <application>
    </application>
</faces-config>
