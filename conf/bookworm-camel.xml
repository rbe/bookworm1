<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <!--
        Camel.
    -->
    <bean id="bookwormFileParser" class="eu.artofcoding.bookworm.BookwormFileParser"/>
    <bean id="bookwormImportProcessor" class="eu.artofcoding.bookworm.BookwormImportProcessor">
        <property name="bookwormFileParser" ref="bookwormFileParser"/>
    </bean>
    <camelContext xmlns="http://camel.apache.org/schema/spring"
                  id="bookwormCamelContext"
                  trace="false">
        <!--
            Routes.
        -->
        <!-- Incoming file -->
        <route id="incomingFile" autoStartup="true">
            <from uri="file://temp/data?move=../done&amp;moveFailed=../error"/>
            <bean ref="bookwormImportProcessor" method="importFile"/>
        </route>
    </camelContext>
</beans>
