<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring-2.14.1.xsd">
    <bean id="bookFileParser" class="eu.artofcoding.bookworm.catalog.datimport.BookFileParser"/>
    <bean id="bookImportProcessor" class="eu.artofcoding.bookworm.catalog.datimport.BookImportProcessor">
        <property name="bookFileParser" ref="bookFileParser"/>
    </bean>
    <camelContext xmlns="http://camel.apache.org/schema/spring"
                  id="bookwormBooks"
                  trace="false">
        <route id="incomingFile" autoStartup="true">
            <from uri="file://temp/data?move=../done&amp;moveFailed=../error"/>
            <bean ref="bookImportProcessor" method="importFile"/>
        </route>
    </camelContext>
</beans>
